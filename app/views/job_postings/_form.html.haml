= form_for(@job_posting) do |f|
  - if @job_posting.errors.any?
    #error_explanation
      %h2
        = pluralize(@job_posting.errors.count, "error")
        prohibited this job_posting from being saved:
      %ul
        - @job_posting.errors.full_messages.each do |msg|
          %li= msg
  .actions
    = f.submit
